<Window
    x:Class="Wpf_Databases.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_Databases"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="800"
    Height="450"
    Background="Gray"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            x:Name="username"
            Width="264"
            Height="30"
            Margin="281,187,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text=""
            TextWrapping="Wrap" />
        <Button
            x:Name="button"
            Width="190"
            Height="46"
            Margin="318,256,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Click"
            Content="submit" />
        <Button
            x:Name="button_Copy"
            Width="190"
            Height="46"
            Margin="318,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="loginC"
            Content="Login" />

    </Grid>
</Window>
